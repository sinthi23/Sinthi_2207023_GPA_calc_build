<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.calculator_builder.HomeController">

    <children>
        <VBox alignment="CENTER" layoutY="75.0"
              prefHeight="199.0" prefWidth="600.0"
              spacing="20.0">

            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <children>
                <Label text="Welcome to GPA calculator"
                       prefHeight="69.0" prefWidth="309.0">
                    <font>
                        <Font size="23.0"/>
                    </font>
                </Label>

                <!-- The button that will load Calculator.fxml -->
                <Button fx:id="startButton"
                        text="Start GPA Calculator"
                        mnemonicParsing="false"
                        onAction="#handleStartButton"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
